# xstormy16 testcase for mov$ws2 $Rdm,($Rs++,$imm12) -*- Asm -*-
# mach: all

	.include "testutils.inc"

	start

	.data
data:	.byte 0xfa,0xce,0xde,0xad
	.text

	.global movgrgriipostinc
movgrgriipostinc:
	mov    r1, #data
	mov.b  r2, (r1++, 1)
	assert r2, 0xce
	mov.b  r2, (r1++, 2)
	assert r2, 0xad

	mov    r1, #data
	mov.w  r2, (r1++, 2)
	assert r2, 0xadde
	sub    r1, #2
	mov.w  r2, (r1++, 1)
	assert r2, 0xcefa

	br okay

wrong:
	fail
okay:
	pass
