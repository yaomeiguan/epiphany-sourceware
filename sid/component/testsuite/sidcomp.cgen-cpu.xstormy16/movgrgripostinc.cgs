# xstormy16 testcase for mov$ws2 $Rdm,($Rs++) -*- Asm -*-
# mach: all

	.include "testutils.inc"

	start

	.data
data:	.byte 0xfa,0xce,0xde,0xad
	.text

	.global movgrgripostinc
movgrgripostinc:
	mov    r1, #data
	mov.b  r2, (r1++)
	assert r2, 0xfa
	mov.b  r2, (r1++)
	assert r2, 0xce

	mov    r1, #data
	mov.w  r2, (r1++)
	assert r2, 0xcefa
	sub    r1, #1
	mov.w  r2, (r1++)
	assert r2, 0xcefa

	br okay

wrong:
	fail
okay:
	pass
